@model MediQuickFinal.Models.AccountViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";

}


<div class="Medi-form-container">
    <form method="post" class="form" asp-controller="Account" asp-action="Register">
        <div><h4>Create account with us</h4></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label html-for="FullName">Full Name</label>
            <input type="text" asp-for="FullName" name="FullName" id="FullName" value="@Model.FullName" class="form-control" />
        </div>

        <div class="form-group">
            <label html-for="Email">Email Address</label>
            <input type="text" asp-for="Email" name="Email" id="Email" value="@Model.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label html-for="Password">Password</label>
            <input type="password" asp-for="Password" name="Password" id="Password" class="form-control" />
    </form>

    <div class="form-group">
        <label html-for="ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="ConfirmPassword" class="form-control" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
</div>
