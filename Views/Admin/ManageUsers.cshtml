@model IEnumerable<MediQuickFinal.Models.AccountViewModel.UserViewModel>

@{
    ViewBag.Title = "Manage Users";


}
@if (Model != null && Model.Any())
{
    <div>
        <table class="table table-striped table-bordered">
            <thread>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>

                </tr>

            </thread>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-controller="Admin" asp-route-email="@user.Email" class="btn btn-custom">Edit</a>
                            <a asp-action="DeleteUser" asp-controller="Admin" asp-route-email="@user.Email" class="btn btn-custom">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

        <div>
            <a asp-action="CreateUser" asp-controller="Admin" class="btn btn-success mb-3 btn-custom">Create  new User</a>

        </div>


    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No users found
    </div>
}
